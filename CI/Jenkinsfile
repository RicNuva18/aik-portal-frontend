#!groovy

node {

    step([$class: 'WsCleanup'])

    stage "Checkout Git repo"
        echo "Inicio checkout gir repo"
        checkout scm

    stage "Run test"
        sh "docker run -v \$(pwd)/aik-app-ui:/data --rm usemtech/nodejs-mocha npm install"
        sh "docker run -v \$(pwd)/aik-app-ui:/data --rm usemtech/nodejs-mocha npm install chai chai-http"
        sh "docker run -v \$(pwd)/aik-app-ui:/data --rm usemtech/nodejs-mocha npm test"
    stage "Build RPM"
        sh "[ -d ./rpm] || mkdir ./rpm"
        sh "docker run -v \$(pwd)/aik-app-ui:/data/aik-app-ui -v \$(pwd)/aik-app-ui/rpm:/data/rpm --rm tenzer/fpm -s dir -t rpm -n aik-app-ui -v \$(git rev-parse --short HEAD) --description \"Aik app ui\" --directories /var/www/aik-app-ui --package /data/rpm/aik-app-ui-\$(git rev-parse --short HEAD).rpm /data/aik-app-ui=/var/www/"
    stage "Update YUM repo"
        sh "[ -d ~/repo/rpm/aik-app-ui] || mkdir -p ~/repo/rpm/aik-app-ui/"
        sh "sudo mv ./aik-app-ui/rpm/*.rpm ~/repo/rpm/aik-app-ui/"
        sh "createrepo ~/repo/"
        sh "aws s3 sync ~/repo s3://automatizacion-artifacts-rsa/ --region us-west-2 --delete"
    stage "Check YUM repo"
        sh "sudo yum clean all"
        sh "sudo yum update -y"
        sh "sudo yum info aik-app-ui-\$(git rev-parse --short HEAD)"
    stage "Trigger downstream"

        def versionApp = sh returnStdout: true, script:"printf \$(git rev-parse --short HEAD)"
        build job: "aik-cdelivery", parameters: [[$class: "StringParameterValue", name: "APP_VERSION", value: "${versionApp}-1"]], wait: false

}
